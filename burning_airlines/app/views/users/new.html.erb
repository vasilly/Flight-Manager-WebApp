<h1>Sign Up</h1>

<% if @user.errors.any? %>
  <% @user.errors.full_messages.each do |msg| %>
  <p class="error"> <%= msg %></p>
  <% end %>

<% end %>


<%= form_tag '/sign_up' do |f|  %>

<p>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
</p>
<p>
<%= label_tag :password %>
<%= password_field_tag :password %>

</p>
<p>
<%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>

</p>

<button>Sign Up</button>

<% end %>